#!/usr/bin/env node

const Servino = require('../src/servino');
const argv = require('minimist')(process.argv.slice(2));

(function () {

  console.log(argv);
   //console.log(JSON.parse(JSON.stringify(argv.wdir)));

  let config = {
    host: argv.host,
    port: argv.port,
    root: argv.root,
    wait: argv.wait,
    wdir: argv.wdir,
    verbose: argv.verbose,
  }

  Servino.start(config)

  setTimeout(() => {
    Servino.stop()
  }, 5000);
})();
