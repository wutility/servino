#!/usr/bin/env node

const Servino = require('../src/servino');
const argv = require('minimist')(process.argv.slice(2));

(function () {
  let config = {
    host: argv.host,
    port: argv.port,
    root: argv.root,
    wait: argv.wait,
    wdir: argv.wdir ? argv.wdir.split(',') : null,
    verbose: argv.verbose,
    injection: argv.injection ? JSON.parse(argv.injection) : argv.injection,
    wignore: argv.wignore
  }

  Servino.start(config)
})();
