#!/usr/bin/env node

const Servino = require('../src/servino');
const argv = require('minimist')(process.argv.slice(2));

(function () {

  console.log(argv);

  let config = {
    host: argv.host,
    port: argv.port,
    root: argv.root,
    wait: argv.wait,
    wdir: argv.wdir,
    verbose: argv.verbose,
    wignore: argv.wignore
  }

  Servino.start(config)
})();
